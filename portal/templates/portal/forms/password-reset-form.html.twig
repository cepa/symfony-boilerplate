{% form_theme form 'bootstrap_4_layout.html.twig' %}

<form class="form app-form" novalidate="" autocomplete="off"  action="{{ path('portal_password_reset', {'uniqueId': user.uniqueId, 'token': user.token}) }}" method="POST">
  {{ form_widget(form._token) }}
  <div class="form-group row">
    <div class="col-md-8">
      <label class="form-label">Ustaw nowe hasło</label>
      {{ form_widget(form.password.first) }}
      {{ form_widget(form.password.second) }}
      {{ form_errors(form.password.first) }}
      <div class="text-muted">
        Hasło musi składać się z conajmniej 8 znaków.
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-8">
      <button type="submit" class="btn btn-lg btn-success btn-submit">Wyślij</button>
    </div>
  </div>
</form>
