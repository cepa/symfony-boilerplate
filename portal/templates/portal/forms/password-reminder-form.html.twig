{% form_theme form 'bootstrap_4_layout.html.twig' %}

<form class="form app-form" novalidate="" autocomplete="off"  action="{{ path('portal_password_reminder') }}" method="POST">
  {{ form_widget(form._token) }}
  <div class="form-group row">
    <div class="col-md-8">
      <label class="form-label">Enter your email address</label>
      {{ form_widget(form.email) }}
      {{ form_errors(form.email) }}
      <div class="text-muted">
        We will send an email with a link to reset your password.
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-8">
      <button type="submit" class="btn btn-lg btn-success btn-submit">Submit</button>
    </div>
  </div>
</form>
